}

rule: "[All World] Current Player's Hero"
Event.OngoingPlayer
Team.Team2
if (IsAlive(Player) == true)
{
	if (CurrentHero != HeroOf(Player))
	{
		HeroChanged = true;
		CurrentHero = HeroOf(Player);
	}
}